<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="transaction_comment_wizard_view_form" model="ir.ui.view">
        <field name="name">transaction.comment.wizard.view.form</field>
        <field name="model">transaction.comment.wizard</field>
        <field name="arch" type="xml">
            <form string="Comentario">
                <sheet>
                    <group>
                        <field name="comment" placeholder="Deje un comentario del motivo para el rechazo" />
                    </group>
                    <footer>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                        <button string="Continuar" name="save_comment" type="object" class="oe_highlight"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
